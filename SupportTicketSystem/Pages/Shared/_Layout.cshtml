<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SupportTicketSystem</title>

    <link href="~/css/output.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/input.css" rel="stylesheet" />

    <link href="~/css/fonts.css" rel="stylesheet" />
</head>
<body class="font-vazir bg-gray-100 text-gray-800">

    
    <header class="bg-white shadow mb-4">
        <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
            <div class="text-xl font-bold text-gray-700">
                <a asp-area="" asp-page="/Index">سامانه پشتیبانی</a>
            </div>
            <nav class="flex gap-4 text-sm">
                <a asp-area="" asp-page="/Index" class="text-gray-600 hover:text-blue-600 transition">خانه</a>
                <a asp-area="" asp-page="/Privacy" class="text-gray-600 hover:text-blue-600 transition">حریم خصوصی</a>
            </nav>
        </div>
    </header>

   
    <main class="max-w-6xl mx-auto px-4">
        @RenderBody()
    </main>

    
    <footer class="mt-8 py-4 text-center text-gray-500 text-sm border-t">
        &copy; 2025 - SupportTicketSystem - <a asp-area="" asp-page="/Privacy" class="text-blue-500 hover:underline">حریم خصوصی</a>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
