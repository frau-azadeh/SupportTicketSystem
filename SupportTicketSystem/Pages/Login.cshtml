@page
@model SupportTicketSystem.Pages.LoginModel

@{
    ViewData["Title"] = "ورود";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="bg-white w-full max-w-md rounded-xl shadow-lg p-8 space-y-6">

        <h1 class="text-2xl font-bold text-center text-gray-800 mb-4">سامانه پشتیبانی</h1>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-100 text-red-700 text-sm rounded px-4 py-2 text-center">
                @Model.ErrorMessage
            </div>
        }

        <form method="post" class="space-y-5">

            <div>
                <input asp-for="Username"
                       placeholder="نام کاربری"
                       class="w-full px-4 py-3 border border-gray-300 rounded-md bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 text-right" />
            </div>

            <div>
                <input asp-for="Password"
                       type="password"
                       placeholder="رمز عبور"
                       class="w-full px-4 py-3 border border-gray-300 rounded-md bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 text-right" />
            </div>

            <button type="submit"
                    class="w-full py-3 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-md transition duration-300 shadow">
                ورود
            </button>

        </form>
    </div>
</div>
